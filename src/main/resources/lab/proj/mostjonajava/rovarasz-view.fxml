<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="lab.proj.mostjonajava.RovaraszController">

    <!-- Felső sáv -->
    <top>
        <HBox spacing="20" alignment="CENTER_LEFT">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label fx:id="currentPlayerLabel" text="Aktuális játékos: " />
            <Label fx:id="roundLabel" text="Kör: " />
        </HBox>
    </top>

    <!-- Jobb oldal: rovarlista -->
    <right>
        <VBox spacing="10">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>
            <Label text="Rovarok:" />
            <ListView fx:id="rovarListView" onMouseClicked="#onRovarSelected" />
        </VBox>
    </right>

    <!-- Középen: játéktér és lépések egymás alatt -->
    <center>
        <VBox spacing="10">
            <padding>
                <Insets top="10.0" right="10.0" bottom="10.0" left="10.0"/>
            </padding>

            <!-- Játéktér -->
            <Pane fx:id="jatekter" prefHeight="400"
                  style="-fx-background-color: #e0f7fa; -fx-border-color: black;" />

            <!-- Választóvonal -->
            <Separator />

            <!-- Rovar lépések -->
            <HBox spacing="20" alignment="CENTER">
                <Button text="Lépés" onAction="#onLepesClicked"/>
                <Button text="Fonalvágás" onAction="#onFonalvagasClicked"/>
            </HBox>
        </VBox>
    </center>

</BorderPane>
